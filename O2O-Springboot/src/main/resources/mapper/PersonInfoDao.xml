<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hly.o2o.dao.PersonInfoDao">
	<!--通过userId查询用户信息 -->
	<select id="queryPersonInfoById" resultType="com.hly.o2o.entity.PersonInfo"
		parameterType="Long">
		SELECT
		user_id,
		name,
		profile_img,
		email,
		gender,
		enable_status,
		user_type,
		create_time,
		last_edit_time
		FROM tb_person_info
		WHERE
		user_id=#{userId}
	</select>

	<!-- 添加用户 -->
	<insert id="insertPersonInfo" parameterType="com.hly.o2o.entity.PersonInfo"
		useGeneratedKeys="true" keyProperty="userId" keyColumn="user_id">
		INSERT
		INTO
		tb_person_info(name,profile_img,email,gender,enable_status,user_type,create_time,last_edit_time)
		VALUES(#{name},#{profileImg},#{email},#{gender},#{enableStatus},#{userType},#{createTime},#{lastEditTime})

	</insert>

</mapper>